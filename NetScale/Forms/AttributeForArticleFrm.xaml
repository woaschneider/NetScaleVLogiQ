<mmwpf:mmBusinessWindow x:Class="HWB.NETSCALE.FRONTEND.WPF.Forms.AttributeForArticleFrm"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mmwpf="clr-namespace:OakLeaf.MM.Main.WPF;assembly=OakLeaf.MM2010.WPF"
                        x:Name="Window"
                        Title="BusinessWindow"
                        Width="550"
                        Height="569"
                        AllowsTransparency="False"
                        Background="#FFFFFFFF"
                        WindowStartupLocation="CenterScreen">

    <Grid x:Name="LayoutRoot" Background="#FFC8D6E4">
        <StackPanel Name="stackPanel1"
                    Margin="42,40,52,77"
                    Background="#FFFFEFBB" />
        <Button Name="buttonOk"
                Width="113"
                Height="36"
                Margin="42,0,0,18"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Click="buttonOk_Click"
                Content="Ok" />
        <Button Name="buttonCancel"
                Width="113"
                Height="36"
                Margin="363,0,0,18"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Content="Abbrechen" />
    </Grid>
</mmwpf:mmBusinessWindow>