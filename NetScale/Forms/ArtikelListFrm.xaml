<mmwpf:mmBusinessWindow x:Class="HWB.NETSCALE.FRONTEND.WPF.ArtikelListFrm"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:HWB_NETSCALE_BOEF="clr-namespace:HWB.NETSCALE.BOEF;assembly=HWB.NETSCALE.BOEF"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:mmwpf="clr-namespace:OakLeaf.MM.Main.WPF;assembly=OakLeaf.MM2010.WPF"
                        xmlns:ribbon="clr-namespace:Microsoft.Windows.Controls.Ribbon;assembly=RibbonControlsLibrary"
                        x:Name="Window"
                        Title="Artikelliste"
                        Width="658"
                        Height="522"
                        AllowsTransparency="False"
                        Background="#FFFFFFFF"
                        Loaded="Window_Loaded"
                        WindowStartupLocation="CenterScreen"
                        mc:Ignorable="d">


    <mmwpf:mmBusinessWindow.Resources>
        <HWB_NETSCALE_BOEF:ArtikelEntity x:Key="ArtikelEntityDataSource" d:IsDataSource="True" />
    </mmwpf:mmBusinessWindow.Resources>


    <Grid x:Name="LayoutRoot"
          Background="#FFA5C8E8"
          DataContext="{Binding Source={StaticResource ArtikelEntityDataSource}}">
        <ribbon:Ribbon x:Name="Ribbon"
                       Height="120"
                       Margin="-2,-21,2,0"
                       VerticalAlignment="Top"
                       Background="#FF68A3D8"
                       BorderBrush="#FFB9C9DA">
            <ribbon:Ribbon.ApplicationMenu>
                <ribbon:RibbonApplicationMenu>
                    <ribbon:RibbonApplicationMenuItem x:Name="MenuItemClose"
                                                      Click="MenuItemClose_Click"
                                                      Header="Schließen"
                                                      ImageSource="..\Images\1297283615_Log Out.png" />

                </ribbon:RibbonApplicationMenu>
            </ribbon:Ribbon.ApplicationMenu>
            <ribbon:RibbonTab x:Name="wiegen" Header="Bearbeiten">
                <ribbon:RibbonGroup x:Name="Group1" Header="Betrieb">
                    <ribbon:RibbonButton x:Name="cmdNeu"
                                         Width="80"
                                         Click="cmdNeu_Click"
                                         FontSize="14"
                                         Label=" Neu  "
                                         LargeImageSource="..\Images\1328191262_add-notes.png" />
                    <ribbon:RibbonButton x:Name="cmdEdit"
                                         Width="80"
                                         Click="cmdEdit_Click"
                                         FontSize="14"
                                         Label=" Bearbeiten  "
                                         LargeImageSource="..\Images\1328191024_edit-notes.png" />
                    <ribbon:RibbonButton x:Name="cmdSelect"
                                         Width="80"
                                         Click="cmdSelect_Click"
                                         FontSize="14"
                                         Label=" Auswählen "
                                         LargeImageSource="..\Images\1328252503_ok.png" />

                </ribbon:RibbonGroup>
            </ribbon:RibbonTab>
        </ribbon:Ribbon>
        <DataGrid x:Name="dataGrid"
                  Margin="0,152,2,12"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Mode=OneWay}"
                  MouseDoubleClick="dataGrid_MouseDoubleClick"
                  SelectedValuePath="&quot;PK&quot;"
                  SelectionChanged="dataGrid_SelectionChanged"
                  Style="{DynamicResource DataGridStyle}">
            <DataGrid.Columns>

                <DataGridTextColumn Binding="{Binding number}" Header="Artikel-Nr." />
                <DataGridTextColumn Binding="{Binding description}" Header="Artikel-Bez." />
                <DataGridTextColumn Binding="{Binding kindOfGoodDescription}" Header="Warenart-Bez." />

                <DataGridTextColumn Binding="{Binding ownerBI}" Header="Lagermandant" />
                <DataGridTextColumn Binding="{Binding baseUnitDescription}" Header="BME-Einheit" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="txtSearch"
                 Width="318"
                 Height="30"
                 Margin="0,107,221,0"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Top"
                 Background="#FFFFF7B2"
                 FontSize="16"
                 Opacity="50"
                 TabIndex="1010"
                 TextChanged="txtSearch_TextChanged" />
        <Label x:Name="label1"
               Height="28"
               Margin="12,109,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Suchbegriff:"
               FontWeight="Bold"
               TabIndex="1000" />
    </Grid>
</mmwpf:mmBusinessWindow>