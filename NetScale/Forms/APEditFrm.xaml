            <TextBox Name="textBox9"
                     Width="385"
                     Height="33"
                     MaxHeight="30"
                     Margin="98,208,0,0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     FontSize="16"
                     TabIndex="30"
