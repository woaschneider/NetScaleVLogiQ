                     MaxHeight="30"
                     Margin="98,325,0,0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     FontSize="16"
                     Text="{Binding email}" />
            <Label Name="label11"
                   Height="28"
                   Margin="10,326,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   ClipToBounds="True"
                   Content="eMail"
                   FontSize="14" />
            <TextBox Name="textBox13"
                     Width="0"
                     Height="0"
                     Margin="333,133,0,0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top" />
            <GroupBox Name="groupBox1"
                      Width="232"
                      Height="177"
                      Margin="510,121,0,0"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      Header="Partnerrollen">
                <Grid>
                    <Grid Name="grid2"
                          Width="144"
                          Height="132"
                          Margin="30,14,0,0"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top">
                        <CheckBox Name="checkBox1"
                                  Height="16"
                                  Margin="10,10,0,0"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Top"
                                  Content="Auftraggeber"
                                  IsChecked="{Binding Rolle_AU}"
                                  IsEnabled="False" />
