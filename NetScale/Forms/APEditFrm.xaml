                <ribbon:RibbonTab Name="ribbonTab1"
                                  Background="#FFB9C9DA"
                                  Header="Bearbeiten">
                    <ribbon:RibbonGroup Name="ribbonGroup1" Header="Betrieb">
                        <ribbon:RibbonButton Name="ribbonButton1"
                                             Width="100"
