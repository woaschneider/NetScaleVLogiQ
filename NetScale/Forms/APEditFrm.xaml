            <Label Name="label8"
                   Height="28"
                   Margin="10,209,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   ClipToBounds="True"
                   Content="Anschrift"
                   FontSize="14" />
            <TextBox Name="textBox10"
                     Width="111"
                     Height="33"
